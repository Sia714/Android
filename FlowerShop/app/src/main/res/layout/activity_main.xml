<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <GridLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="5"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_gravity="center"
    android:background="#94D37171"
    android:gravity="center"
    android:text="@string/bouq"
    android:textColor="@color/white"
    android:layout_marginBottom="10dp"
    android:textSize="30sp"
    android:textStyle="bold" />

    <ImageButton
        android:id="@+id/Rose"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="13dp"
        android:background="@drawable/roses"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/Tulip"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="13dp"
        android:background="@drawable/tulips"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/Daisy"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="13dp"
        android:background="@drawable/daisy"
        android:scaleType="centerCrop"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/Peonies"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="13dp"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/peons"
        android:scaleType="centerCrop"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/Irise"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="13dp"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@drawable/irises"
        android:scaleType="centerCrop"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/Sunflower"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="13dp"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@drawable/sun"
        android:scaleType="centerCrop"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/Mix"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="13dp"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@drawable/mix"
        android:scaleType="centerCrop"
        android:contentDescription="@string/flow"
        android:foreground="?attr/selectableItemBackground" />
</GridLayout>
</ScrollView>
