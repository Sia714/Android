<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <GridLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="3"
    android:layout_gravity="center"
    tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/CSE"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/cse"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/MBA"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/mba" />

        <ImageButton
            android:id="@+id/Agri"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/agri" />

        <ImageButton
            android:id="@+id/ECE"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/ece" />

        <ImageButton
            android:id="@+id/CA"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/ca" />

        <ImageButton
            android:id="@+id/Law"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/law" />

        <ImageButton
            android:id="@+id/Mech"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/mech" />

        <ImageButton
            android:id="@+id/Bio"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/bio" />

        <ImageButton
            android:id="@+id/Arch"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/arch" />

</GridLayout>
</ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>